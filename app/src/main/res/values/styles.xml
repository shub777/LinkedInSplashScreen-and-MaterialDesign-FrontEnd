<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="customToolbar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="colorTextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">#c4c4c4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SplashAnimation" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

</resources>
