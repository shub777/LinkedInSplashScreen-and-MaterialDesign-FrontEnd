<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_signin_bg"
    tools:context="com.example.shubhambhama.ibnox.SignupFragment">

    <ImageView
        android:id="@+id/image_ibnox_logo"
        android:layout_width="68.67dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95px"
        android:src="@drawable/ibnox_icon" />

    <LinearLayout
        android:id="@+id/ibnox_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_ibnox_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp on"
            android:textColor="#484848"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ibnox!"
            android:textColor="#484848"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/signup_facebook"
        android:layout_width="220.50dp"
        android:layout_height="34dp"
        android:layout_below="@+id/ibnox_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#3b5998"
        android:drawableLeft="@drawable/facebook_button_icon"
        android:paddingLeft="6dp"
        android:stateListAnimator="@null"
        android:text="Login with facebook"
        android:textAllCaps="false"
        android:textColor="#e5e1db"
        android:textSize="14dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/middle_view_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#636363" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="or"
            android:textColor="#292929"
            android:textSize="9pt"
            android:textStyle="bold" />

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#535353" />
    </LinearLayout>

    <EditText
        android:id="@+id/signup_fullname"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/middle_view_or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:alpha="0.75"
        android:background="#ffffff"
        android:hint="Full Name"
        android:inputType="text"
        android:maxLength="30"
        android:paddingLeft="14dp"
        android:textColor="#1b1b1b"
        android:textColorHint="#646464"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/signup_fullname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0.75"
        android:background="#ffffff"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLength="15"
        android:paddingLeft="14dp"
        android:textColor="#1b1b1b"
        android:textColorHint="#646464"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0.75"
        android:background="#ffffff"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:paddingLeft="14dp"
        android:textColor="#1b1b1b"
        android:textColorHint="#646464"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/signup_confirm_password"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0.75"
        android:background="#ffffff"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:paddingLeft="14dp"
        android:textColor="#1b1b1b"
        android:textColorHint="#646464"
        android:textSize="14dp" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@+id/signup_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:stateListAnimator="@null"
        android:text="Sign Up!"
        android:textAllCaps="false"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By tapping signup,you agree to our "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/signin_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy!"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/footer_color2"
            android:layout_width="120dp"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:clickable="false" />

        <Button
            android:id="@+id/footer_color1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_textview"
            android:clickable="false" />
    </LinearLayout>
</RelativeLayout>
