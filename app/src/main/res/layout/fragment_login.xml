<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_signin_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.shubhambhama.ibnox.LoginFragment">

        <ImageView
            android:id="@+id/image_ibnox_logo"
            android:layout_width="68.67dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95px"
            android:src="@drawable/ibnox_icon" />

        <TextView
            android:id="@+id/ibnox_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_ibnox_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54px"
            android:text="Ibnox!"
            android:textColor="#484848"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signin_facebook"
            android:layout_width="220.50dp"
            android:layout_height="34dp"
            android:layout_below="@+id/ibnox_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#3b5998"
            android:drawableLeft="@drawable/facebook_button_icon"
            android:paddingLeft="6dp"
            android:stateListAnimator="@null"
            android:text="Login with facebook"
            android:textAllCaps="false"
            android:textColor="#e5e1db"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/middle_view_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_facebook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#636363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="or"
                android:textColor="#292929"
                android:textSize="9pt"
                android:textStyle="bold" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#535353" />
        </LinearLayout>

        <EditText
            android:id="@+id/signin_email"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@id/middle_view_or"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:alpha="0.75"
            android:background="#ffffff"
            android:hint="Email"
            android:maxLength="30"
            android:paddingLeft="14dp"
            android:textColor="#1b1b1b"
            android:textColorHint="#646464"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_below="@+id/signin_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:alpha="0.75"
            android:background="#ffffff"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="14dp"
            android:textColor="#1b1b1b"
            android:textColorHint="#646464"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/sigin_dont_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/signin_password"
            android:layout_below="@+id/signin_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2.5dp"
            android:layout_marginTop="14.5dp"
            android:text="Don't remember your password?"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signin_button"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_below="@+id/sigin_dont_remember"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Login"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textSize="13dp" />

            <TextView
                android:id="@+id/signin_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up!"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/footer_color2"
                android:layout_width="120dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/black"
                android:clickable="false" />

            <Button
                android:id="@+id/footer_color1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_textview"
                android:clickable="false" />
        </LinearLayout>
</RelativeLayout>
